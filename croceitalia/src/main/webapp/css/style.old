#errore {
	width:500px; height:100px;
	background-color:#113488;
	color:#FFFFFF;
	font-weight:bold;
	position:absolute;
	text-align:center;
	border:#FF0000 solid 1px;
	padding:15px;
	top:150px; left:50%;
	margin:0px 0 0 -250px;
	z-index:50;
}

#wait {
	width:250px;
	height:20px;
	visibility:hidden;
	background-color:#113488;
	color:#FFFFFF;
	font-weight:bold;
	position:absolute;
	text-align:center;
	border:#FF0000 solid 1px;
	padding:15px;
	top:150px;
	left:50%;
	margin:0px 0 0 -150px;
	z-index:50;
}
